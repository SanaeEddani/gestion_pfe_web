<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.example.frontend">

    <!-- Permissions réseau -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.Frontend"
            android:networkSecurityConfig="@xml/network_security_config"
            tools:targetApi="31">

        <!-- =========================
             Activity principale
             ========================= -->
        <activity
                android:name=".MainActivity"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- =========================
             Authentification / Utilisateur
             ========================= -->
        <activity
                android:name=".SignupActivity"
                android:exported="false" />

        <activity
                android:name=".RegisterActivity"
                android:exported="false" />

        <activity
                android:name=".ForgotPasswordActivity"
                android:exported="false" />

        <activity
                android:name=".VerifyOtpActivity"
                android:exported="false" />

        <!-- =========================
             Reset Password (Deep Links)
             ========================= -->
        <activity
                android:name=".ResetPasswordActivity"
                android:exported="true">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- IP 1 -->
                <data
                        android:scheme="http"
                        android:host="10.41.223.37"
                        android:pathPrefix="/reset-password" />

                <!-- IP 2 -->
                <data
                        android:scheme="http"
                        android:host="10.41.223.37"
                        android:pathPrefix="/reset-password" />

                <!-- IP 3 -->
                <data
                        android:scheme="http"
                        android:host="10.41.223.37"
                        android:pathPrefix="/reset-password" />
            </intent-filter>
        </activity>

        <!-- =========================
             Rôles
             ========================= -->
        <activity
                android:name=".AdminActivity"
                android:exported="false" />

        <activity
                android:name=".StudentActivity"
                android:exported="false" />

        <activity
                android:name=".CadreActivity"
                android:exported="false" />

        <activity
                android:name=".EncadrantActivity"
                android:exported="false" />

        <!-- =========================
             Étudiant / Projets / Documents
             ========================= -->
        <activity
                android:name=".EtudiantProfileActivity"
                android:exported="false" />

        <activity
                android:name=".DetailEtudiantActivity"
                android:exported="false" />

        <activity
                android:name=".AjouterProjetActivity"
                android:exported="false"
                android:theme="@style/Theme.Frontend" />

        <activity
                android:name=".DocumentsActivity"
                android:exported="false" />

        <activity
                android:name=".item_document"
                android:exported="false"
                android:theme="@style/Theme.Frontend" />

    </application>

</manifest>
