<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signup"
    tools:context=".SignupActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/bg_signup"
        android:contentDescription="Logo" />

    <!-- Formulaire -->
    <ScrollView
        android:id="@+id/formScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:background="@drawable/rounded_edittext"
            android:elevation="8dp">

            <!-- Nom -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom *"
                app:boxBackgroundMode="outline"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords|textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Prénom -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prénom *"
                app:boxBackgroundMode="outline"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/prenomEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords|textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email *"
                app:boxBackgroundMode="outline"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mot de passe -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mot de passe *"
                app:endIconMode="password_toggle"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Règles du mot de passe -->
            <LinearLayout
                android:id="@+id/passwordRulesLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/ruleLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Au moins 8 caractères"
                    android:textColor="@color/errorRed" />

                <TextView
                    android:id="@+id/ruleLowercase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Au moins une minuscule"
                    android:textColor="@color/errorRed" />

                <TextView
                    android:id="@+id/ruleUppercase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Au moins une majuscule"
                    android:textColor="@color/errorRed" />

                <TextView
                    android:id="@+id/ruleDigit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Au moins un chiffre"
                    android:textColor="@color/errorRed" />

                <TextView
                    android:id="@+id/ruleSpecial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Au moins un caractère spécial (@#$%!)"
                    android:textColor="@color/errorRed" />
            </LinearLayout>

            <!-- Rôle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Je suis *"
                android:textColor="@color/primaryBlue"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/roleRadioGroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/studentRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Étudiant"
                    android:textColor="@color/primaryBlue"
                    android:layout_marginEnd="20dp" />

                <RadioButton
                    android:id="@+id/teacherRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encadrant"
                    android:textColor="@color/primaryBlue" />
            </RadioGroup>

            <!-- SECTION ETUDIANT -->
            <LinearLayout
                android:id="@+id/studentSection"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Code Apogée *"
                    app:boxBackgroundMode="outline"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/apogeeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/filiereSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>

            <!-- SECTION ENCADRANT -->
            <LinearLayout
                android:id="@+id/teacherSection"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/departementSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Code Prof *"
                    app:boxBackgroundMode="outline"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/codeProfEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Bouton S’inscrire -->
            <Button
                android:id="@+id/registerButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S’inscrire"
                android:background="@drawable/button_register"
                android:textColor="@color/white"
                android:padding="12dp" />

            <!-- Lien Login -->
            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Vous avez déjà un compte ? Se connecter"
                android:textColor="@color/primaryBlue"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
