<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil Étudiant"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom :" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email :" />

        <TextView
            android:id="@+id/tvFiliere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filière :" />

        <TextView
            android:id="@+id/tvAppogee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appogée :" />

        <Button
            android:id="@+id/btnAjouterProjet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter un projet"
            android:layout_marginTop="20dp"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <!-- LinearLayout projetContainer déplacé à l'intérieur du premier LinearLayout -->
        <LinearLayout
            android:id="@+id/projetContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/projet_card_background"
            android:layout_marginTop="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvProjetSujet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sujet :"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvProjetDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :" />

            <TextView
                android:id="@+id/tvProjetEntreprise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entreprise :" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
